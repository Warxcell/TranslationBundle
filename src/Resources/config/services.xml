<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

   
    <parameters>
        <parameter key="object_bg.translation.loader_class">ObjectBG\TranslationBundle\TranslationLoader</parameter>
        <parameter key="object_bg.translation.helper_class">ObjectBG\TranslationBundle\Helper</parameter>
        <parameter key="object_bg.translation.dumper.database_class">ObjectBG\TranslationBundle\Dumper\DatabaseDumper</parameter>
    </parameters>

    <services>
        <service id="object_bg.translation.loader" class="%object_bg.translation.loader_class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="translation.loader" alias="db"/>
        </service>
		
        <service id="object_bg.translation.helper" class="%object_bg.translation.helper_class%">
            <argument type="service" id="service_container" />
        </service>
        
        <service id="object_bg.translation.dumper.database" class="%object_bg.translation.dumper.database_class%">
            <tag name="translation.dumper" alias="db" />
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>
    </services>
</container>
